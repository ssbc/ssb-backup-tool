{
	"name": "ssb-backup-tool",
	"productName": "SSB Backup Tool",
	"version": "0.0.7",
	"description": "A backup tool for the scuttleverse",
	"license": "MIT",
	"repository": "ssbc/ssb-backup-tool",
	"private": true,
	"author": {
		"name": "Andre Alves Garzia",
		"email": "andre@andregarzia.com",
		"url": "https://andregarzia.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"start": "cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
		"dev": "cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true DEVELOPMENT_MODE=true electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --windows --linux ",
		"release": "env-cmd electron-builder --windows --macos --linux --publish always",
		"release-ci": "electron-builder --macos --windows --linux --publish always",
		"fix-release-notes": "env-cmd node scripts/fix-release-notes.js",
		"fix-release-notes-ci": "node scripts/fix-release-notes-ci.js"
	},
	"dependencies": {
		"cross-env": "^6.0.0",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^4.0.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0",
		"lodash": "^4.17.15",
		"marked": "^0.8.0",
		"mithril": "^2.0.4",
		"open-external": "^0.1.1",
		"pull-stream": "^3.6.14",
		"ssb-about": "^2.0.1",
		"ssb-avatar": "^0.2.0",
		"ssb-backlinks": "^0.7.3",
		"ssb-blobs": "^1.2.2",
		"ssb-client": "^4.7.8",
		"ssb-config": "^3.3.2",
		"ssb-conn": "^0.17.0",
		"ssb-ebt": "^5.6.7",
		"ssb-friends": "^4.1.4",
		"ssb-keys": "^7.2.0",
		"ssb-lan": "^0.2.0",
		"ssb-local": "^1.0.0",
		"ssb-logging": "^1.0.0",
		"ssb-master": "^1.0.3",
		"ssb-no-auth": "^1.0.0",
		"ssb-ooo": "^1.3.1",
		"ssb-query": "^2.4.3",
		"ssb-ref": "^2.13.9",
		"ssb-replicate": "^1.3.0",
		"ssb-server": "^15.1.1",
		"ssb-unix-socket": "^1.0.0",
		"ssb-ws": "^6.2.3"
	},
	"devDependencies": {
		"electron": "^13.6.6",
		"electron-builder": "^22.9.1",
		"env-cmd": "^10.0.1",
		"handlebars": "^4.5.1",
		"node-fetch": "^2.6.0",
		"open": "^7.0.0"
	},
	"build": {
		"appId": "org.ssbc.ssb-backup-tool",
		"win": {
			"publish": [
				"github"
			],
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				},
				{
					"target": "zip",
					"arch": [
						"x64",
						"ia32",
						"arm64"
					]
				}
			]
		},
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true,
			"publish": [
				"github"
			]
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"ia32",
						"arm64"
					]
				}
			],
			"publish": [
				"github"
			],
			"category": "Network;Chat"
		}
	},
	"files": [
		"**/*",
		"!old/**/*",
		"!dist/installers",
		"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
		"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
		"!**/node_modules/*.d.ts",
		"!**/node_modules/.bin",
		"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
		"!.editorconfig",
		"!.env",
		"!**/._*",
		"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes,.vscode,.idea}",
		"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
		"!**/{appveyor.yml,.travis.yml,circle.yml,.env}",
		"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
	]
}
