{
	"name": "ssb-backup-tool",
	"productName": "SSB Backup Tool",
	"version": "0.0.1",
	"description": "A backup tool for the scuttleverse",
	"license": "MIT",
	"repository": "ssbc/ssb-backup-tool",
	"author": {
		"name": "Andre Alves Garzia",
		"email": "andre@andregarzia.com",
		"url": "https://andregarzia.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --windows --linux",
		"dist:mac": "electron-builder --macos",
		"dist:win": "electron-builder  --windows",
		"dist:linux": "electron-builder --linux",
		"release": "np"
	},
	"dependencies": {
		"cross-env": "^6.0.0",
		"depject": "^4.1.1",
		"depnest": "^1.3.0",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^4.0.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0",
		"flat": "^4.1.0",
		"font-awesome": "^4.7.0",
		"libnested": "^1.4.1",
		"lodash": "^4.17.15",
		"map-limit": "0.0.1",
		"micro-css": "^2.0.2",
		"mutant": "^3.23.0",
		"open-external": "^0.1.1",
		"patch-history": "^1.0.0",
		"patch-settings": "^1.1.2",
		"patchcore": "^2.1.7",
		"pull-stream": "^3.6.14",
		"require-style": "^1.1.0",
		"run-parallel": "^1.1.9",
		"setimmediate": "^1.0.5",
		"sodium-native": "^2.4.6",
		"ssb-about": "^2.0.1",
		"ssb-backlinks": "^0.7.3",
		"ssb-blobs": "^1.2.2",
		"ssb-client": "^4.7.8",
		"ssb-config": "^3.3.2",
		"ssb-ebt": "^5.6.7",
		"ssb-friends": "^4.1.4",
		"ssb-gossip": "^1.1.0",
		"ssb-keys": "^7.2.0",
		"ssb-local": "^1.0.0",
		"ssb-logging": "^1.0.0",
		"ssb-master": "^1.0.3",
		"ssb-no-auth": "^1.0.0",
		"ssb-ooo": "^1.3.1",
		"ssb-query": "^2.4.3",
		"ssb-ref": "^2.13.9",
		"ssb-replicate": "^1.3.0",
		"ssb-server": "^15.1.1",
		"ssb-unix-socket": "^1.0.0",
		"ssb-ws": "^6.2.3"
	},
	"devDependencies": {
		"electron": "^6.0.7",
		"electron-builder": "^21.2.0",
		"np": "^5.0.3",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "org.ssbc.ssb-backup-tool",
		"win": {
			"publish": ["github"]
		},
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true,
			"publish": ["github"]
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"publish": ["github"],
			"category": "Network;Chat"
		}
	}
}
